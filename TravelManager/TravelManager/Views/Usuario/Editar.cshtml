@model TravelManager.Models.Usuario

<h3>@(Model.Id == 0 ? "Novo Usuário" : "Editar Usuário")</h3>

<form asp-action="Salvar" method="POST">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="nomeCompleto">Nome Completo</label>
        <input type="text" required class="form-control" id="nomeCompleto" name="NomeCompleto" placeholder="Digite o nome completo" value="@Model.NomeCompleto">
    </div>
    <div class="form-group">
        <label for="dataNascimento">Data Nascimento</label>
        <input id="dataNascimento" required class="form-control" type="date" name="DataNascimento" value="@string.Format("{0:yyyy-MM-dd}", Model.DataNascimento)">
    </div>
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" required id="login" placeholder="Digite o login" name="Login" value="@Model.Login">
    </div>
    <div class="form-group">
        <label for="senha">Senha <small>@(Model.Id == 0 ? "" : "Caso não queira alterar a senha deixar a mesma em branco")</small></label>
        <input type="password" class="form-control" @(Model.Id == 0 ? "required" : "") id="senha" placeholder="Digite a senha" name="Senha">
    </div>
    <div class="form-group">
        <label for="tipo">Tipo</label>
        <select class="form-control" required id="tipo" name="Tipo" asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoUsuario>()">
            <option value="">Selecione um tipo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-dark">Salvar</button>
</form>